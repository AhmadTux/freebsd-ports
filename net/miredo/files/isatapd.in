#!/bin/sh
#
# $FreeBSD: ports/net/miredo/files/isatapd.in,v 1.1 2006/08/13 19:39:24 miwi Exp $
#

# PROVIDE: isatapd
# REQUIRE: NETWORKING
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable isatapd:
#
#isatapd_enable="YES"
#
isatapd_enable="${isatapd_enable-NO}"

. /etc/rc.subr

name=isatapd
rcvar=`set_rcvar`

command=%%PREFIX%%/sbin/${name}
required_files=%%PREFIX%%/etc/isatapd.conf

load_rc_config ${name}
run_rc_command "$1"
