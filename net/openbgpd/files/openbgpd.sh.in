#!/bin/sh
#
# $FreeBSD: ports/net/openbgpd/files/openbgpd.sh.in,v 1.1 2005/05/17 14:46:42 flz Exp $
#

# PROVIDE: bgpd
# REQUIRE: LOGIN abi
# BEFORE:  securelevel
# KEYWORD: shutdown

# Add the following line to /etc/rc.conf to enable `openbgpd':
#
# openbgpd_enable="YES"
#
# See bgpd(8) for openbgpd_flags
#

. "%%RC_SUBR%%"

name="openbgpd"
rcvar=`set_rcvar`

extra_commands="reload"
command="%%PREFIX%%/sbin/bgpd"
required_files="%%PREFIX%%/etc/bgpd.conf"

load_rc_config "$name"
: ${openbgpd_enable="NO"}
: ${openbgpd_flags=""}

run_rc_command "$1"
