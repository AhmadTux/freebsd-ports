#!/bin/sh
#
# $FreeBSD: ports/net/poptop/files/pptpd.sh.in,v 1.3 2006/07/19 16:18:40 dougb Exp $
#
# PROVIDE: pptpd
# REQUIRE: DAEMON
#
# Add the following lines to /etc/rc.conf to enable pptpd:
#
# pptpd_enable="YES"
# pptpd_flags="<set as needed>"

pptpd_enable=${pptpd_enable-"NO"}

. %%RC_SUBR%%

name=pptpd
rcvar=`set_rcvar`

command=%%PREFIX%%/sbin/${name}
pidfile=/var/run/${name}.pid
sig_stop=KILL

load_rc_config ${name}
run_rc_command "$1"
