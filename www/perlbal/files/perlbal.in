# PROVIDE: perlbal
# REQUIRE: DAEMON
# KEYWORK: shutdown

. /etc/rc.subr

name="perlbal"
command="%%PREFIX%%/bin/perlbal"

load_rc_config "$name"
: ${perlbal_enable="NO"}
: ${perlbal_configuration="%%PREFIX%%/etc/perlbal/perlbal.conf"}
: ${perlbal_flags="--config $perlbal_configuration --daemon"}

run_rc_command "$1"

