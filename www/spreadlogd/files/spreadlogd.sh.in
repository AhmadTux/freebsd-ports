#!/bin/sh
#
# $FreeBSD: ports/www/spreadlogd/files/spreadlogd.sh.in,v 1.2 2006/02/20 20:47:49 dougb Exp $
#

# PROVIDE: spreadlogd
# REQUIRE: spread
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable spread:
#
# spreadlogd_enable="YES"
# spreadlogd_flags="<set as needed>"

. %%RC_SUBR%%

name=spreadlogd
rcvar=`set_rcvar`

command="%%PREFIX%%/sbin/spreadlogd"
pidfile=/var/run/${name}.pid
required_files=%%PREFIX%%/etc/${name}.conf

load_rc_config ${name}

# set defaults

spreadlogd_enable=${spreadlogd_enable:-"NO"}

run_rc_command "$1"
