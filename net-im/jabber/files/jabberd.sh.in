#!/bin/sh
#
# $FreeBSD: ports/net-im/jabber/files/jabberd.sh.in,v 1.4 2006/03/18 16:08:47 garga Exp $
#
# PROVIDE: jabber
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add the following lines to /etc/rc.conf to enable rsyncd:
#
# jabber_enable="YES"
#

. %%RC_SUBR%%

name="jabber"
rcvar=`set_rcvar`

load_rc_config $name

required_files=%%PREFIX%%/etc/${name}.xml

: ${jabber_enable="NO"}
: ${jabber_pidfile="/var/run/jabber/${name}.pid"}
: ${jabber_flags="-B -h `/bin/hostname` -c ${required_files}"}
: ${jabber_user="jabber"}
: ${jabber_group="jabber"}

command=%%PREFIX%%/bin/jabberd
command_args="${jabber_flags}"
pidfile=${jabber_pidfile}

run_rc_command "$1"
