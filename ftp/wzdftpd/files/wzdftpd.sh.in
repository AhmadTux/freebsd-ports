#!/bin/sh

# Start or stop wzdftpd
# $FreeBSD: ports/ftp/wzdftpd/files/wzdftpd.sh.in,v 1.2 2006/10/14 08:52:53 marcus Exp $

# PROVIDE: wzdftpd
# REQUIRE: DAEMON
# BEFORE: LOGIN
# KEYWORD: shutdown
#

# Add the following lines to /etc/rc.conf to enable wzdftpd
# wzdftpd_enable="YES"
# wzdftpd_flags="<set as needed>"

wzdftpd_enable=${wzdftpd_enable:-"NO"}		# Enable wzdftpd

. %%RC_SUBR%%

name="wzdftpd"
rcvar=`set_rcvar`
command="%%PREFIX%%/sbin/${name}"
required_files="%%PREFIX%%/etc/wzd.cfg"

load_rc_config $name
run_rc_command "$1"
