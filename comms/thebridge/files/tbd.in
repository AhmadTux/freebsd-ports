#!/bin/sh
#
# $FreeBSD: ports/comms/thebridge/files/tbd.in,v 1.2 2008/11/05 18:53:45 db Exp $
#

# PROVIDE: tbd
# REQUIRE: DAEMON
# BEFORE: LOGIN
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable tbd:
#
# tbd_enable="YES"
# tbd_flags="<set as needed>"
#

tbd_enable=${tbd_enable-"NO"}

. %%RC_SUBR%%

name="tbd"
rcvar=`set_rcvar`
command="%%PREFIX%%/libexec/tbd"

load_rc_config $name
run_rc_command "$1"
