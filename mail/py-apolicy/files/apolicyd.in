#!/bin/sh

# Start or stop apolicyd
# $FreeBSD: ports/mail/py-apolicy/files/apolicyd.in,v 1.1 2008/11/29 21:02:39 miwi Exp $

# PROVIDE: apolicyd
# REQUIRE: TWISTD
# KEYWORD: shutdown


# Define these apolicyd_* variables in one of these files:
#       /etc/rc.conf
#       /etc/rc.conf.local
#
# DO NOT CHANGE THESE DEFAULT VALUES HERE


. %%RC_SUBR%%

name="apolicyd"
rcvar=`set_rcvar`

command="%%PREFIX%%/bin/twistd"
pidfile="/var/run/apolicyd.pid"
logfile="/var/log/apolicyd.log"

load_rc_config $name

: ${apolicyd_enable="NO"}

command_args="--pidfile=${pidfile} -y %%PYTHON_SITELIBDIR%%/apolicy/server.py -q --logfile=${logfile} 2>&1 >/dev/null"
procname="%%PYTHON_CMD%%"

run_rc_command "$1"
