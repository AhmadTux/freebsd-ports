#!/bin/sh
# $FreeBSD: ports/mail/drac/files/dracd.sh.in,v 1.2 2005/05/20 14:58:13 pav Exp $

# PROVIDE: dracd
# REQUIRE: DAEMON
# BEFORE: LOGIN
# KEYWORD: shutdown

# Define these dracd_* variables in one of these files:
#       /etc/rc.conf
#       /etc/rc.conf.local
#       /etc/rc.conf.d/dracd
#
# DO NOT CHANGE THESE DEFAULT VALUES HERE
#
dracd_enable=${dracd_enable-"NO"}
dracd_flags=${dracd_flags-""}

. %%RC_SUBR%%

name="dracd"
rcvar=`set_rcvar`
command="%%PREFIX%%/sbin/rpc.dracd "${dracd_flags}

load_rc_config $name
run_rc_command "$1"
