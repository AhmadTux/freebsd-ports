#!/bin/sh
#
# macroscope - start Macroscope daemon
#
# $FreeBSD: ports/net-mgmt/macroscope/files/macroscope.in,v 1.2 2008/07/08 07:14:22 beech Exp $
# 
# PROVIDE: macroscope
# REQUIRE: DAEMON
# KEYWORD: shutdown

# -----------------------------------------------------------------------------
# macroscope_enable="NO"	# set to YES to enable macroscope
#
# # optional:
# macroscope_flags=""		# additional command line arguments
#

. %%RC_SUBR%%

name="macroscope"
rcvar=$(set_rcvar)

start_precmd()
{
	return 0
}

stop_postcmd()
{
	rm -f "$pidfile" || warn "Could not remove $pidfile."
}

# pidfile
eval pidfile=\$${name}_pidfile
pidfile=${pidfile:-/var/run/${name}.pid}
echo ${pidfile}

# command and arguments
command="%%PREFIX%%/sbin/${name}"

# run this first
start_precmd="start_precmd"
# and this last
stop_postcmd="stop_postcmd"

load_rc_config ${name}

command_args="--sniffer --daemon --pid ${pidfile}"

run_rc_command "$1"
