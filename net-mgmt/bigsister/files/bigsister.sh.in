#!/bin/sh
#
# $FreeBSD: ports/net-mgmt/bigsister/files/bigsister.sh.in,v 1.1 2006/04/02 14:26:46 pav Exp $
#

# PROVIDE: bigsister
# REQUIRE: DAEMON
# BEFORE:  LOGIN
#
# Add the following to /etc/rc.conf to enable this service
#
# bigsister_enable="YES"
#

. %%RC_SUBR%%

name="bigsister"
rcvar=`set_rcvar`
start_cmd=bs_start
stop_cmd=bs_stop

bs_start() {
	%%PREFIX%%/bigsister/bin/bb_start start
}

bs_stop() {
	%%PREFIX%%/bigsister/bin/bb_start stop
}

load_rc_config $name
run_rc_command "$1"
