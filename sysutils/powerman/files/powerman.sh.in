#!/bin/sh
# $FreeBSD: ports/sysutils/powerman/files/powerman.sh.in,v 1.1 2009/02/16 13:25:42 jadawin Exp $

# PROVIDE: powermand
# REQUIRE: NETWORKING
# BEFORE: LOGIN
# KEYWORD: shutdown

# Define these powermand_* variables in one of these files:
#	/etc/rc.conf
#	/etc/rc.conf.local
#	/etc/rc.conf.d/powermand
#
# DO NOT CHANGE THESE DEFAULT VALUES HERE
#
# powermand_enable="YES"
# powermand_flags="<set as needed>"

powermand_enable=${powermand_enable:-"NO"}

. %%RC_SUBR%%

name="powermand"
rcvar=`set_rcvar`
command="%%PREFIX%%/sbin/powermand"
required_files="%%PREFIX%%/etc/powerman.conf"
 
load_rc_config $name
run_rc_command "$1"
