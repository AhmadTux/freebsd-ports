#!/bin/sh
#
# $FreeBSD: ports/security/shibboleth2-sp/files/shibboleth-sp.in,v 1.2 2009/07/21 03:58:40 pgollucci Exp $
#
# PROVIDE: shibboleth_sp
# REQUIRE: DAEMON
#

. /etc/rc.subr

name="shibboleth_sp"
rcvar=${name}_enable

[ -z "$shibboleth_sp_enable" ] && shibboleth_sp_enable="NO"
pidfile="/var/run/${name}.pid"
command="%%PREFIX%%/sbin/shibd"
start_cmd="${command} -f -p ${pidfile} &"

load_rc_config $name
run_rc_command "$1"
