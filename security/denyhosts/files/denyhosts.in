#!/bin/sh
#
# $FreeBSD: ports/security/denyhosts/files/denyhosts.in,v 1.1 2006/05/19 23:47:45 mnag Exp $
#
# PROVIDE: denyhosts
# REQUIRE: DAEMON
#

. %%RC_SUBR%%

name="denyhosts"
rcvar=${name}_enable

command="%%PREFIX%%/bin/denyhosts.py"
command_interpreter="%%PYTHON%%"
command_args="--config %%PREFIX%%/etc/denyhosts.conf --daemon"
pidfile="/var/run/${name}.pid"

load_rc_config $name

: ${denyhosts_enable="NO"}

run_rc_command "$1"
