#!/bin/sh
#
# $FreeBSD: ports/security/f-protd/files/fprotd.sh.in,v 1.1 2007/03/09 10:20:17 miwi Exp $
#
# PROVIDE: fprotd
# REQUIRE: DAEMON
# KEYWORD: shutdown
#
# Add the following to /etc/rc.conf[.local] to enable this service
#
# fprotd_enable="YES"
#

. /etc/rc.subr

name=fprotd
rcvar=`set_rcvar`
start_precmd="fprotd_precmd"
command="%%PREFIX%%/f-prot/f-protd"
command_args="> /dev/null 2>&1"

required_files="/etc/f-prot.conf"

load_rc_config ${name}

: ${fprotd_enable=NO}
: ${fprotd_virus_defs=%%PREFIX%%/f-prot}

fprotd_precmd()
{
	rc_flags="--background --defpath ${fprotd_virus_defs} ${fprotd_flags}"
}

run_rc_command "$1"
