#!/bin/sh
#
# $FreeBSD: ports/multimedia/projectx/files/project-x.sh.in,v 1.1 2005/04/21 12:08:11 hq Exp $

case "$#" in
0)
	mkdir -p "${HOME}/.projectx"
	cd "${HOME}/.projectx"
	ln -sf %%DATADIR%%/*.txt %%DATADIR%%/htmls .
	if ! grep '^# ProjectX 0.90.2.00' X.ini >/dev/null; then
		rm -f X.ini
	fi
	;;
esac

JAVA_VERSION="%%JAVA_VERSION%%" "%%LOCALBASE%%/bin/java" -jar "%%DATADIR%%/ProjectX.jar" "$@"
