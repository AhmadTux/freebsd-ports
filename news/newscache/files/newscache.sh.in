#!/bin/sh
#
# $FreeBSD: ports/news/newscache/files/newscache.sh.in,v 1.3 2006/07/19 16:18:41 dougb Exp $
#
# PROVIDE: newscache
# REQUIRE: DAEMON
#
# Add the following lines to /etc/rc.conf to enable newscache:
#
# newscache_enable="YES"
# newscache_flags="<set as needed>"

newscache_enable=${newscache_enable-"NO"}

. %%RC_SUBR%%

name=newscache
rcvar=`set_rcvar`

command=%%PREFIX%%/sbin/${name}
pidfile=/var/run/${name}.pid
sig_stop=KILL

load_rc_config ${name}
run_rc_command "$1"
