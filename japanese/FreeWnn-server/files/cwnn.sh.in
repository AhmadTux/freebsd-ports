#!/bin/sh
# $FreeBSD: ports/japanese/FreeWnn-server/files/cwnn.sh.in,v 1.1 2008/11/01 14:45:15 hrs Exp $
#
# PROVIDE: cwnn
# REQUIRE: LOGIN
# KEYWORD: shutdown
#

. %%RC_SUBR%%

name=cwnn
rcvar=`set_rcvar`
command=%%PREFIX%%/bin/cWnn4/cserver
procname=%%PREFIX%%/bin/cWnn4/cserver
start_precmd=start_precmd
stop_postcmd=stop_postcmd
WTCMD=%%PREFIX%%/bin/cWnn4/cwnntouch

start_precmd()
{
	rm -f /tmp/cd_sockV4
	install -d -o wnn -m 755 %%PREFIX%%/lib/wnn/zh_CN/dic/usr
	%%PREFIX%%/lib/wnn/zh_CN/dic/sys/*
}

stop_postcmd()
{
	rm -f /tmp/cd_sockV4
}

load_rc_config ${name}
run_rc_command $1
