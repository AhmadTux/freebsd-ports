#!/bin/sh
#
# $FreeBSD: ports/databases/phpmyadmin/files/pkg-install.in,v 1.2 2008/01/21 10:58:20 miwi Exp $
#

PATH=/usr/sbin:/usr/bin:/bin ; export PATH

WWWDIR=%%WWWDIR%%
pma_usr=%%PMA_USR%%
pma_grp=%%PMA_GRP%%

case $2 in

    POST-INSTALL)

    	# Change ownership of the phpMyAdm directory

        echo "===> Adjusting file ownership in $WWWDIR"
        chown -R $pma_usr:$pma_grp $WWWDIR || exit 1
	;;
esac

#
# That's All Folks!
#
