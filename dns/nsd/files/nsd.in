#!/bin/sh
#
# $FreeBSD: ports/dns/nsd/files/nsd.in,v 1.2 2008/07/29 17:23:02 pgollucci Exp $
#
# PROVIDE: nsd
# REQUIRE: DAEMON
#
# Add the following line to /etc/rc.conf to enable nsd:
#
# nsd_enable="YES"
#

. %%RC_SUBR%%

name=nsd
rcvar=`set_rcvar`

required_files=%%PREFIX%%/etc/nsd/nsd.conf

command=%%PREFIX%%/sbin/${name}
pidfile=/var/run/${name}.pid

load_rc_config ${name}

nsd_enable=${nsd_enable-"NO"}

stop_cmd="nsd_stop"

nsd_stop()
{
	echo "Merging nsd zone transfer changes to zone files."
	%%PREFIX%%/sbin/nsdc patch

	echo "Stopping nsd."
	%%PREFIX%%/sbin/nsdc stop
}

run_rc_command "$1"

