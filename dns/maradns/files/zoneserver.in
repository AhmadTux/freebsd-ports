#!/bin/sh
#
# $FreeBSD: ports/dns/maradns/files/zoneserver.in,v 1.2 2009/10/07 09:51:28 miwi Exp $
#

# PROVIDE: zoneserver
# REQUIRE: SERVERS
# BEFORE: DAEMON
# KEYWORD: shutdown
#

. %%RC_SUBR%%

: ${zoneserver_enable="NO"}
: ${maradns_conf="%%PREFIX%%/etc/mararc"}

name="zoneserver"
rcvar=`set_rcvar`
command="%%PREFIX%%/bin/duende"
command_args="%%PREFIX%%/sbin/zoneserver -f ${maradns_conf}"
pidfile="/var/run/${name}.pid"

load_rc_config $name

run_rc_command "$1"
