#!/bin/sh
#
# $FreeBSD: ports/sysutils/epmd/files/epmd.sh.in,v 1.9 2006/02/20 20:47:45 dougb Exp $
#
# PROVIDE: epmd
# REQUIRE: LOGIN
#
# Add the following line to /etc/rc.conf to enable epmd:
#
# epmd_enable="YES"
#

epmd_enable=${epmd_enable:-"NO"}

. %%RC_SUBR%%

name=epmd
rcvar=`set_rcvar`

prefix=%%PREFIX%%
procname=${prefix}/bin/epmd
start_cmd="${prefix}/bin/epmd -daemon"
stop_cmd="${prefix}/bin/epmd -kill >/dev/null"

load_rc_config ${name}
run_rc_command "$1"
